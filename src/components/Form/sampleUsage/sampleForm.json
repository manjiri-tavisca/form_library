{
  "formData": {
    "cssClass": "form-wrapper",
    "type": "react-hook-form",
    "form-text-content": "",
    "error-summary-cssClass": "error-summary-class",
    "useYup": false,
    "error-message-position": "bottom"
  },
  "section-left": {
    "cssClass": "section-left-class",
    "fields": [
      {
        "fieldType": "custom",
        "isEnableValidation": false,
        "name": "heading",
        "content": "<p class='small'>*All fields are mandatory</p>"
      },
      {
        "field-label": {
          "text": "First Name",
          "cssClass": ""
        },
        "isEnableValidation": true,
        "fieldType": "text",
        "html-input-type": "text",
        "name": "firstName",
        "id": "firstName",
        "placeholder": "",
        "wrapperCssClass": "text-wrapper",
        "validation": {
          "type": "string",
          "required": {
            "value": true,
            "message": "Firstname is required."
          }
        },
        "cssClass": ""
      },
      {
        "field-label": {
          "text": "Middle Name",
          "cssClass": ""
        },
        "isEnableValidation": true,
        "fieldType": "text",
        "html-input-type": "text",
        "name": "middleName",
        "id": "middleName",
        "placeholder": "",
        "wrapperCssClass": "text-wrapper",
        "validation": {
          "type": "string",
          "required": {
            "value": true,
            "message": "Middlename is required."
          }
        },
        "cssClass": ""
      },
      {
        "field-label": {
          "text": "Last Name",
          "cssClass": ""
        },
        "isEnableValidation": true,
        "fieldType": "text",
        "html-input-type": "text",
        "name": "lastName",
        "id": "lastName",
        "placeholder": "",
        "wrapperCssClass": "text-wrapper",
        "validation": {
          "type": "string",
          "required": {
            "value": true,
            "message": "Lastname is required."
          }
        },
        "cssClass": ""
      },
      {
        "field-label": {
          "text": "Email Id",
          "cssClass": "email-field-label"
        },
        "isEnableValidation": true,
        "fieldType": "text",
        "html-input-type": "text",
        "name": "email",
        "id": "email",
        "placeholder": "Email",
        "field-info": "",
        "field-info-cssClass": "field-info",
        "wrapperCssClass": "text-wrapper",
        "validationMessagecssClass": "someCssClass",
        "validation": {
          "type": "string",
          "required": {
            "value": true,
            "message": "The email field is required"
          },
          "regex": {
            "value": "^(([^<>()\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\\\ .,;:\\s@\"]+)*)|('.+'))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$",
            "message": "Please enter a valid email Id"
          },
          "min": {
            "value": 0,
            "message": "The minimum length of this field is 2"
          },
          "max": {
            "value": 0,
            "message": "The maximum length of this field is 4"
          },
          "yup": {
            "customType": {
              "value": "email",
              "message": "The email id should be valid"
            }
          }
        },
        "cssClass": "email-class"
      },
      {
        "field-label": {
          "text": "Password",
          "cssClass": "password-label"
        },
        "wrapperCssClass": "password-wrapper",
        "isEnableValidation": true,
        "fieldType": "text",
        "html-input-type": "password",
        "name": "password",
        "id": "password",
        "placeholder": "Password",
        "field-info": "",
        "field-info-cssClass": "password-field-info",
        "validationMessagecssClass": "someCssClass",
        "validation": {
          "type": "string",
          "required": {
            "value": true,
            "message": "The password field is required"
          },
          "min": {
            "value": 2,
            "message": "The minimum length of this field is 2"
          },
          "max": {
            "value": 4,
            "message": "The maximum length of this field is 4"
          }
        },
        "cssClass": "password-class"
      },
      {
        "field-label": {
          "text": "Suffix",
          "cssClass": ""
        },
        "isEnableValidation": true,
        "fieldType": "select",
        "name": "suffix",
        "id": "suffix",
        "default-value": "Select Suffix",
        "wrapperCssClass": "select-field-wrapper",
        "optionCssClass": "option-class",
        "options": [
          {
            "value": "",
            "text": ""
          }
        ],
        "validationMessagecssClass": "",
        "validation": {
          "type": "string",
          "required": {
            "value": true,
            "message": "This field is required"
          }
        },
        "cssClass": ""
      },
      {
        "field-label": {
          "text": "Gender",
          "cssClass": "gender-field-label-class"
        },
        "isEnableValidation": true,
        "fieldType": "select",
        "name": "gender",
        "id": "gender",
        "default-value": "Select Gender...",
        "wrapperCssClass": "select-field-wrapper",
        "optionCssClass": "option-class",
        "options": [
          {
            "value": "male",
            "text": "Male"
          },
          {
            "value": "female",
            "text": "Female"
          }
        ],
        "validationMessagecssClass": "someCssClass",
        "validation": {
          "type": "string",
          "required": {
            "value": true,
            "message": "You must select a gender before proceeding"
          }
        },
        "cssClass": "gender-class"
      },
      {
        "field-label": {
          "text": "I accept the terms and conditions",
          "cssClass": "checkbox-field-label",
          "position": "right"
        },
        "wrapperCssClass": "checkbox-wrapper",
        "isEnableValidation": true,
        "fieldType": "checkbox",
        "html-input-type": "checkbox",
        "name": "T&C",
        "id": "termsAndConditions",
        "validationMessagecssClass": "someCssClass",
        "validation": {
          "type": "bool",
          "required": {
            "value": true,
            "message": "Please accept the terms and conditions"
          }
        },
        "cssClass": "checkbox-class"
      },
      {
        "isEnableValidation": false,
        "fieldType": "submit",
        "html-input-type": "submit",
        "name": "submitButton",
        "wrapperClass": "btnSubmit",
        "text": "Submit"
      }
    ]
  }
}
